# =============================================================================
# Healthcare MCP App Environment Variables
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
DEBUG=false
APP_NAME=Healthcare MCP App
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://mongoadmin:secret@localhost:27017/healthcare?authSource=admin
MONGODB_NAME=healthcare
MONGODB_USER=mongoadmin
MONGODB_PASSWORD=secret
MONGODB_HOST=localhost
MONGODB_PORT=27017

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_SERVER_COMMAND=ts-node
MCP_SERVER_ARGS=src/mcp/mcp-server.ts
MCP_SERVER_PATH=src/mcp/mcp-server.ts
MCP_CONNECTION_TIMEOUT=10000
MCP_API_KEY=your-secret-mcp-api-key-change-in-production
NESTJS_BASE_URL=http://localhost:3000

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION_NAME=healthcare_conversations

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=*
CORS_CREDENTIALS=false
CORS_METHODS=GET,POST,PUT,PATCH,DELETE

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# DOCKER COMPOSE OVERRIDES (if using Docker)
# =============================================================================
# MONGODB_URI=mongodb://mongoadmin:secret@mongo:27017/healthcare?authSource=admin
# MONGODB_HOST=mongo
